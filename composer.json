{
	"name": "pronamic/pronamic-wp-i18n-text-domain-replacer",
	"description": "A developer tool for replacing WordPress translation text domains in PHP, JavaScript, and `block.json` files.",
	"authors": [
		{
			"name": "Pronamic",
			"email": "info@pronamic.eu"
		}
	],
	"bin": [
		"bin/pronamic-wp-i18n-text-domain-replacer"
	],
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"pronamic/wp-coding-standards": "^2.3"
	},
	"scripts": {
		"test": "bin/pronamic-wp-i18n-text-domain-replacer --dir=tests --text-domain-search=old --text-domain-search=older --text-domain-search=block-development-examples --text-domain-replace=new --exclude=exclude"
	}
}
